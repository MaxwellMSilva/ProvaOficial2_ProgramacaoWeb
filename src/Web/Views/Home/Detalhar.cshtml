@model Web.Models.VeiculoViewModel

@{
    ViewData["Title"] = "Detalhar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalhar</h1>

<div>
    <h4>Veiculo</h4>
    <hr />
    <dl class="row">
       
        <dt class = "col-sm-2">
            Marca:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Veiculo_Marca)
        </dd>
        <dt class = "col-sm-2">
            Modelo:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Veiculo_Modelo)
        </dd>
        <dt class = "col-sm-2">
            Ano:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Veiculo_Ano)
        </dd>
        <dt class = "col-sm-2">
            Quilometragem:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Veiculo_Quilometragem)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Alterar", "Alterar", new {  id = Model.Id }) |
    <a asp-action="Index">Voltar</a>
</div>
