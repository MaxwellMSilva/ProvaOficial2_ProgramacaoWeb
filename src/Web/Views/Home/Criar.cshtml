<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="Veiculo_Marca" class="control-label"></label>
                <input asp-for="Veiculo_Marca" class="form-control" />
