            </div>
            <div class="form-group">
                <label asp-for="Veiculo_Quilometragem" class="control-label"></label>
                <input asp-for="Veiculo_Quilometragem" class="form-control" />
                <span asp-validation-for="Veiculo_Quilometragem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class = "btn btn-outline-danger">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
